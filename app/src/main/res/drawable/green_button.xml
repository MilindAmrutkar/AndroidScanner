<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#35b6f2" />
            <gradient android:angle="-90" android:startColor="#35b6f2" android:endColor="#35b6f2"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#35b6f2" />
            <solid android:color="#35b6f2"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="6dip" />
            <gradient android:angle="90" android:startColor="#009300" android:endColor="#009300" />
        </shape>
    </item>
</selector>